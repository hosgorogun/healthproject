<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#31A9E3"
    android:orientation="vertical"
    tools:context=".ui.dashboard.HostActivity">

    <Button
        android:id="@+id/button_hastane"
        android:layout_width="188dp"
        android:layout_height="0dp"
        android:layout_marginTop="131dp"
        android:layout_marginBottom="32dp"
        android:text="Hastane Evimde"
        app:layout_constraintBottom_toTopOf="@+id/button_eczane"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_eczane"
        android:layout_width="188dp"
        android:layout_height="0dp"
        android:layout_marginBottom="40dp"
        android:text="Eczane Evimde"
        app:layout_constraintBottom_toTopOf="@+id/button_fizyoterapist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_hastane" />

    <Button
        android:id="@+id/button_fizyoterapist"
        android:layout_width="188dp"
        android:layout_height="0dp"
        android:layout_marginBottom="36dp"
        android:text="Fizyoterapist Evimde"
        app:layout_constraintBottom_toTopOf="@+id/button_psikolog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_eczane" />

    <Button
        android:id="@+id/button_psikolog"
        android:layout_width="188dp"
        android:layout_height="0dp"
        android:layout_marginBottom="160dp"
        android:text="Psikolog Evimde"
        app:layout_constraintBottom_toTopOf="@+id/text_welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_fizyoterapist" />

    <TextView
        android:id="@+id/text_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="53dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_psikolog" />

</androidx.constraintlayout.widget.ConstraintLayout>